
<div class="row">
<div class=" offset-md-3 col-md-6">
<h1>Book your flight</h1>
<%= form_for @booking do |f| %>
  <%= render partial: 'shared/errors', locals: {object: @booking }%>
  <div class="form-group">
     <h5>Flight Details:</h5>
    Departing: <%= @booking.flight.departure_airport.name %>, at
      <%=@booking.flight.leaving %> <br>
    Arriving: <%= @booking.flight.arrival_airport.name %>, at
      <%= @booking.flight.arriving %>
  <%= f.hidden_field :flight_id %>
  </div>
    <% counter = 1 %>
    <h5>Please enter passenger details: </h5>
    <%= f.fields_for :passengers do |p| %>
      <div class="form-group">
        <%= p.label :name, 'Name:' %>
        <%= p.text_field :name, class: 'form-control',
          placeholder: "Passenger #{counter}"%>
        <%= p.label :email, 'Email:' %>
        <%= p.email_field :email, class: 'form-control',
          placeholder: "Passenger #{counter}" %>
        <%= p.hidden_field :flight_id %>
      </div>
      <% counter += 1 %>
    <% end %>

  <%= f.submit 'Confirm booking', class: 'btn btn-primary' %>
  <% end %>
  </div>
</div>
